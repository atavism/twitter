<?xml version="1.0" encoding="utf-8"?>


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/showDM"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView android:id="@+id/showDMProfileImage"
			android:layout_height="45dp" android:layout_width="45dp"
			android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
			android:layout_marginTop="15dp" android:src="@drawable/default_profile"
			android:background="@drawable/image_border" />

		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:paddingLeft="20dp"
			android:layout_marginTop="15dp">

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<!-- placeholder for the "unposted" notification -->
				<ImageView android:id="@+id/dmToPost" android:src="@drawable/blank"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />

				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="\@"
					android:textColor="@color/twimightTextDark" android:minLines="1"
					android:textSize="16sp" android:singleLine="true" />
				<TextView android:id="@+id/showDMScreenName"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="ScreenName" android:textStyle="bold"
					android:textColor="@color/twimightTextDark" android:minLines="1"
					android:textSize="16sp" android:singleLine="true" />
				<TextView android:layout_height="wrap_content" android:id="@+id/dmCreatedAt"
					android:text="10 minutes ago" android:layout_gravity="right"
					android:singleLine="true" android:gravity="right" android:textSize="16sp"
					android:layout_width="fill_parent" android:textColor="@color/twimightTextLight"
					android:layout_marginLeft="5dp" />
			</LinearLayout>

			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:paddingTop="2dp">



				<TextView android:id="@+id/showDMText"
					android:layout_width="190dp" android:layout_height="wrap_content"
					android:text="DM Text" android:textColor="@color/twimightTextLight"
					android:textSize="16sp" android:layout_marginBottom="15dp" />

				<ImageButton android:id="@+id/showDMDelete"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_gravity="right" android:layout_marginLeft="5dp"
					android:layout_marginBottom="15dp" android:src="@drawable/btn_twimight_delete"
					android:visibility="visible" android:paddingLeft="10dp"
					android:paddingRight="10dp" />


			</LinearLayout>
		</LinearLayout>
	</LinearLayout>


